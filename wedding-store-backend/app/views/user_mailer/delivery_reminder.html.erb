    <span class="order-label">Return Date</span>
    <span class="order-value"><%= @booking.end_date.strftime("%A, %B %d, %Y") %></span>
  </div>
  
  <div class="order-row">
    <span class="order-label">Product</span>
    <span class="order-value"><%= @metadata[:product_name] || 'Your Rental Attire' %></span>
  </div>
  <% end %>
  
  <% if @order %>
  <div class="order-row">
    <span class="order-label">Delivery Address</span>
    <span class="order-value"><%= @order.address %></span>
  </div>
  <% end %>
</div>

